<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bservice"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.bservice.LauncherActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.bservice.SecondActivity"
            android:label="@string/app_name" />

        <service
            android:name="com.example.bservice.BService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.example.bservice.BServiceIF" />
                <action android:name="com.example.bservice.action.START" />
                <action android:name="com.example.bservice.action.STOP" />
            </intent-filter>
        </service>
    </application>

</manifest>